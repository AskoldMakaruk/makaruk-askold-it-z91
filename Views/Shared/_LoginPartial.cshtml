<ul class="navbar-nav">
    @if (@User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <p class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</p>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
        </li>
    }
</ul>